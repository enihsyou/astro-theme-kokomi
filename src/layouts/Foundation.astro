---
// This file provides a base layout for the application.
// It defines the HTML structure and includes necessary metadata.

import config from "@/kokomi.config";
import BaseHead from "@/components/structure/BaseHead.astro";

interface Props {
    title: string;
}

const { title } = Astro.props as Props;
---

<!doctype html>
<html lang={config.locale.lang}>
    <head>
        <BaseHead title={title} />
    </head>
    <body>
        <slot />
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>
